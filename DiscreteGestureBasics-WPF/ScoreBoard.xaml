<Page x:Class="Microsoft.Samples.Kinect.DiscreteGestureBasics.ScoreBoard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Microsoft.Samples.Kinect.DiscreteGestureBasics"
      mc:Ignorable="d" 
      Background="{DynamicResource MaterialDesignPaper}"
      FontFamily="{StaticResource MaterialDesignFont}"
      d:DesignHeight="300" d:DesignWidth="300"
      Title="ScoreBoard">

    <Grid>
        <Button Content="Back" HorizontalAlignment="Left" VerticalAlignment="Top"  Click="Back" FontSize="72" Foreground="Red"  Style="{StaticResource TextButton}"/>
        <ListBox Name="ListBox_Score" HorizontalAlignment="Center" Width="500"/>
    </Grid>
</Page>
