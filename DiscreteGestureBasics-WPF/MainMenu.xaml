<Page x:Class="Microsoft.Samples.Kinect.DiscreteGestureBasics.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Microsoft.Samples.Kinect.DiscreteGestureBasics"
      mc:Ignorable="d" 
            Background="{DynamicResource MaterialDesignPaper}"
      FontFamily="{StaticResource MaterialDesignFont}"
      d:DesignHeight="300" d:DesignWidth="300"
      Title="MainMenu">
    <Grid>
        <Button Content="Log Out" HorizontalAlignment="Left" VerticalAlignment="Top"  Click="LogOut" FontSize="72" Foreground="Red"  Style="{StaticResource TextButton}"></Button>
        <Button Content="Start Game" HorizontalAlignment="Center" Margin="10,10,10,150" VerticalAlignment="Center"  Click="GestureMenu" FontSize="96" Height="Auto" Style="{StaticResource TextButton}">
        </Button>
        <Button Content="Score Board" HorizontalAlignment="Center" Margin="10,10,10,-150" VerticalAlignment="Center"  Click="ScoreBoard" FontSize="96" Height="Auto"  Style="{StaticResource TextButton}"></Button>
        <Button Content="Exit" HorizontalAlignment="Center" Margin="49,296,53,-130" VerticalAlignment="Center"  Click="Exit" FontSize="96" Height="Auto"  Style="{StaticResource TextButton}"></Button>
    </Grid>
</Page>
